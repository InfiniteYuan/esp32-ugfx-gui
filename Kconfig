            config LVGL_TOUCH_IIC_NUM
                int "LVGL_TOUCH_IIC_NUM"
                default "0"
            config LVGL_TOUCH_IIC_SDA_GPIO
                int "LVGL_TOUCH_SDA_GPIO"
                default "1"
            config LVGL_TOUCH_IIC_SCL_GPIO
                int "LVGL_TOUCH_SCL_GPIO"
                default "3"
